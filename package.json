{
  "name": "spoton-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f mysql",
    "dev": "npm run db:up && sleep 3 && concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start:dev",
    "build:frontend": "cd frontend && npm run build:prd",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "start:prod": "cd backend && npm run start:prod"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
